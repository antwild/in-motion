<div class="container">
  <%= simple_form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <% @blog.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :cover_image %>
    <%= f.input :cover_image_cache, as: :hidden %>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-info" %>
    </div>
  <% end %>
</div>
